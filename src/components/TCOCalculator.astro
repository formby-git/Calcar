<div
  id="tco-section"
  class="bg-white p-6 md:p-8 rounded-xl shadow-lg border border-slate-200 hidden transition-all duration-500 ease-in-out"
>
  <div class="flex items-center justify-between mb-4 border-b pb-2">
    <h2 id="calculator-title" class="text-lg font-semibold text-slate-900">
      Cost Calculator
    </h2>

    <!-- Model Toggle -->
    <div
      class="flex rounded-lg border border-slate-200 overflow-hidden text-sm"
    >
      <button
        id="btn-model-basic"
        class="px-3 py-1 bg-blue-600 text-white"
        type="button">Standard</button
      >
      <button
        id="btn-model-pro"
        class="px-3 py-1 bg-white text-slate-600"
        type="button">Pro</button
      >
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Inputs -->
    <div class="space-y-4">
      <div>
        <label class="block text-sm text-slate-700 mb-1"
          >Purchase Price (£)</label
        >
        <input
          type="number"
          id="input-price"
          class="w-full px-3 py-2 border border-slate-300 rounded focus:ring-2 focus:ring-blue-500 bg-slate-100 text-slate-500 cursor-not-allowed"
          placeholder="e.g. 5000"
          readonly
          min="0"
          max="10000000"
        />
      </div>

      <div>
        <label class="block text-sm text-slate-700 mb-1">Ownership Term</label>

        <!-- Pro Selector (Dropdown) -->
        <div id="term-selector-pro" class="hidden relative">
          <select
            id="input-term"
            class="w-full px-3 py-2 border border-slate-300 rounded focus:ring-2 focus:ring-blue-500 appearance-none"
          >
            <option value="12" data-short="1 Year">1 Year (12 Months)</option>
            <option value="24" data-short="2 Years">2 Years (24 Months)</option>
            <option value="36" data-short="3 Years" selected
              >3 Years (36 Months)</option
            >
            <option value="48" data-short="4 Years">4 Years (48 Months)</option>
            <option value="60" data-short="5 Years">5 Years (60 Months)</option>
            <option value="72" data-short="6 Years">6 Years (72 Months)</option>
            <option value="84" data-short="7 Years">7 Years (84 Months)</option>
            <option value="96" data-short="8 Years">8 Years (96 Months)</option>
            <option value="108" data-short="9 Years"
              >9 Years (108 Months)</option
            >
            <option value="120" data-short="10 Years"
              >10 Years (120 Months)</option
            >
            <option value="132" data-short="11 Years"
              >11 Years (132 Months)</option
            >
            <option value="144" data-short="12 Years"
              >12 Years (144 Months)</option
            >
            <option value="156" data-short="13 Years"
              >13 Years (156 Months)</option
            >
            <option value="168" data-short="14 Years"
              >14 Years (168 Months)</option
            >
            <option value="180" data-short="15 Years"
              >15 Years (180 Months)</option
            >
          </select>
          <div
            class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-slate-500"
          >
            <svg
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
        </div>

        <!-- Standard Selector (Buttons) -->
        <div id="term-selector-standard" class="flex gap-2">
          <button
            type="button"
            data-value="24"
            class="term-btn flex-1 py-2 text-sm border rounded bg-white border-slate-300 text-slate-600 hover:bg-slate-50 transition-colors"
            >2 Years</button
          >
          <button
            type="button"
            data-value="36"
            class="term-btn flex-1 py-2 text-sm border rounded bg-blue-600 border-blue-600 text-white shadow-sm transition-colors"
            >3 Years</button
          >
          <button
            type="button"
            data-value="48"
            class="term-btn flex-1 py-2 text-sm border rounded bg-white border-slate-300 text-slate-600 hover:bg-slate-50 transition-colors"
            >4 Years</button
          >
          <button
            type="button"
            data-value="60"
            class="term-btn flex-1 py-2 text-sm border rounded bg-white border-slate-300 text-slate-600 hover:bg-slate-50 transition-colors"
            >5 Years</button
          >
        </div>
      </div>

      <div id="resale-container" class="hidden">
        <label class="block text-sm text-slate-700 mb-1"
          >Estimated Resale Value (£)</label
        >
        <input
          type="number"
          id="input-resale"
          class="w-full px-3 py-2 border border-slate-300 rounded focus:ring-2 focus:ring-blue-500"
          placeholder="e.g. 2000"
          min="0"
          max="10000000"
        />
      </div>

      <!-- Reset Button -->
      <div id="reset-container" class="pt-1 hidden">
        <button
          id="btn-reset-prices"
          type="button"
          class="text-xs text-slate-400 hover:text-slate-600 underline-offset-2 hover:underline transition-colors"
        >
          ↻ Reset to original price
        </button>
      </div>
    </div>

    <!-- Results -->
    <div
      class="bg-slate-50 p-4 rounded border border-slate-100 flex flex-col justify-center space-y-4"
    >
      <div class="flex justify-between items-center text-sm">
        <span class="text-slate-500">Total Depreciation</span>
        <span class="font-medium" id="res-depreciation">-</span>
      </div>
      <div class="flex justify-between items-center text-sm">
        <span class="text-slate-500">Total Road Tax (VED)</span>
        <span class="font-medium" id="res-tax">-</span>
      </div>
      <div class="pt-4 border-t border-slate-200 mt-2">
        <div
          class="flex justify-between items-center text-xl font-bold text-slate-900"
        >
          <span>Monthly Cost</span>
          <span id="res-monthly">£0 / mo</span>
        </div>
        <div
          class="flex justify-between items-center text-sm text-slate-500 mt-1"
        >
          <span>Total Cost</span>
          <span id="res-total">£0</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Pro Model Modifiers (only visible when Pro is selected) -->
  <div
    id="modifier-badges"
    class="border-t border-amber-200 mt-0 max-h-0 opacity-0 overflow-hidden transition-all duration-500 ease-in-out"
  >
    <div class="pt-6">
      <h3
        class="text-sm font-semibold text-amber-900 mb-3 flex items-center gap-2"
      >
        <span class="text-amber-600">✨</span> Pro Insights
      </h3>
      <div class="flex flex-wrap gap-2" id="modifier-list"></div>
    </div>
  </div>
</div>

<script>
  import type { Car } from "../utils/carService";
  import { calculateTotalVED } from "../utils/taxCalculator";
  import {
    calculateResaleValue,
    getActiveModifiers,
    type DepreciationModel,
  } from "../utils/depreciationCalculator";

  let currentCar: Car | null = null;
  let currentModel: DepreciationModel = "basic";

  const section = document.getElementById("tco-section");
  const inputPrice = document.getElementById("input-price") as HTMLInputElement;
  const inputTerm = document.getElementById("input-term") as HTMLSelectElement;
  const inputResale = document.getElementById(
    "input-resale",
  ) as HTMLInputElement;

  // Containers
  const termSelectorPro = document.getElementById("term-selector-pro");
  const termSelectorStandard = document.getElementById(
    "term-selector-standard",
  );
  const resaleContainer = document.getElementById("resale-container");
  const resetContainer = document.getElementById("reset-container");
  const termBtns = document.querySelectorAll(".term-btn");

  const btnBasic = document.getElementById("btn-model-basic");
  const btnPro = document.getElementById("btn-model-pro");

  const resDepreciation = document.getElementById("res-depreciation");
  const resTax = document.getElementById("res-tax");
  const resTotal = document.getElementById("res-total");
  const resMonthly = document.getElementById("res-monthly");

  const modifierBadges = document.getElementById("modifier-badges");
  const modifierList = document.getElementById("modifier-list");

  const calculatorTitle = document.getElementById("calculator-title");

  // Model toggle handlers
  btnBasic?.addEventListener("click", () => setModel("basic"));
  btnPro?.addEventListener("click", () => setModel("pro"));

  // Standard term button handlers
  termBtns.forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const target = e.currentTarget as HTMLButtonElement;
      const value = target.dataset.value;
      if (value && inputTerm) {
        inputTerm.value = value;

        // Update styling
        termBtns.forEach((b) => {
          b.classList.remove(
            "bg-blue-600",
            "border-blue-600",
            "text-white",
            "shadow-sm",
          );
          b.classList.add(
            "bg-white",
            "border-slate-300",
            "text-slate-600",
            "hover:bg-slate-50",
          );
        });
        target.classList.remove(
          "bg-white",
          "border-slate-300",
          "text-slate-600",
          "hover:bg-slate-50",
        );
        target.classList.add(
          "bg-blue-600",
          "border-blue-600",
          "text-white",
          "shadow-sm",
        );

        updateResaleEstimate();
        calculate();
      }
    });
  });

  function setModel(model: DepreciationModel) {
    currentModel = model;

    // Update button styles and branding
    if (btnBasic && btnPro && section && calculatorTitle) {
      // Reset term to 3 years (default)
      if (inputTerm) inputTerm.value = "36";

      // Update Standard button visual state
      const termBtns = document.querySelectorAll(".term-btn");
      termBtns.forEach((btn) => {
        const b = btn as HTMLButtonElement;
        if (b.dataset.value === "36") {
          b.classList.remove(
            "bg-white",
            "border-slate-300",
            "text-slate-600",
            "hover:bg-slate-50",
          );
          b.classList.add(
            "bg-blue-600",
            "border-blue-600",
            "text-white",
            "shadow-sm",
          );
        } else {
          b.classList.remove(
            "bg-blue-600",
            "border-blue-600",
            "text-white",
            "shadow-sm",
          );
          b.classList.add(
            "bg-white",
            "border-slate-300",
            "text-slate-600",
            "hover:bg-slate-50",
          );
        }
      });

      if (model === "basic") {
        // Standard Mode
        btnBasic.className = "px-3 py-1 bg-blue-600 text-white";
        btnPro.className = "px-3 py-1 bg-white text-slate-600";

        // Style: Basic
        section.classList.remove("bg-white", "border-amber-200", "shadow-xl");
        section.classList.add("bg-white", "border-slate-200", "shadow-lg");

        calculatorTitle.textContent = "Cost Calculator";

        // Visibility Logic
        inputPrice.readOnly = true;
        inputPrice.classList.add(
          "bg-slate-100",
          "text-slate-500",
          "cursor-not-allowed",
        );

        termSelectorPro?.classList.add("hidden");
        termSelectorStandard?.classList.remove("hidden");
        resaleContainer?.classList.remove("hidden");
        resetContainer?.classList.add("hidden");

        // Resale is read-only in Standard mode
        if (inputResale) {
          inputResale.readOnly = true;
          inputResale.classList.add(
            "bg-slate-100",
            "text-slate-500",
            "cursor-not-allowed",
          );
        }

        // Sync price to default incase it was changed in Pro
        if (currentCar) inputPrice.value = currentCar.basicPrice.toString();
      } else {
        // Pro Mode
        btnBasic.className = "px-3 py-1 bg-white text-slate-600";
        btnPro.className =
          "px-3 py-1 bg-amber-100 text-amber-900 border border-amber-200 font-medium shadow-sm";

        // Style: Pro
        section.classList.remove("border-slate-200", "shadow-lg");
        section.classList.add("bg-white", "border-amber-200", "shadow-xl");

        calculatorTitle.textContent = "Cost Calculator Pro";

        // Visibility Logic
        inputPrice.readOnly = false;
        inputPrice.classList.remove(
          "bg-slate-100",
          "text-slate-500",
          "cursor-not-allowed",
        );

        termSelectorPro?.classList.remove("hidden");
        termSelectorStandard?.classList.add("hidden");
        resaleContainer?.classList.remove("hidden");
        resetContainer?.classList.remove("hidden");

        // Resale is editable in Pro mode
        if (inputResale) {
          inputResale.readOnly = false;
          inputResale.classList.remove(
            "bg-slate-100",
            "text-slate-500",
            "cursor-not-allowed",
          );
        }
      }
    }

    updateModifierBadges();
    updateResaleEstimate();
    calculate();
  }

  // Listen for car load
  window.addEventListener("car-loaded", ((e: CustomEvent<Car>) => {
    currentCar = e.detail;
    if (section) section.classList.remove("hidden");

    // Auto-fill price
    if (currentCar && inputPrice) {
      inputPrice.value = currentCar.basicPrice.toString();
    }

    // Reset to standard on new car load usually, or keep current model?
    // Let's keep current model state but re-trigger to update UI if needed (price reset etc)
    setModel(currentModel);
  }) as EventListener);

  function updateResaleEstimate() {
    if (!currentCar || !inputPrice || !inputResale || !inputTerm) return;

    const price = parseFloat(inputPrice.value) || currentCar.basicPrice;
    const termYears = parseInt(inputTerm.value) / 12;

    const estimatedResale = calculateResaleValue(
      price,
      currentCar,
      termYears,
      currentModel,
    );
    inputResale.value = estimatedResale.toString();
  }

  function calculate() {
    if (!currentCar || !inputPrice || !inputResale || !inputTerm) return;

    const price = parseFloat(inputPrice.value) || 0;
    const resale = parseFloat(inputResale.value) || 0;
    const termMonths = parseInt(inputTerm.value);

    // Depreciation
    const depreciation = Math.max(0, price - resale);

    // Tax (using total VED for ownership period, assuming used car purchase)
    const termYears = Math.ceil(termMonths / 12);
    const totalTax = calculateTotalVED(currentCar, termYears, false);

    // Total
    const totalCost = depreciation + totalTax;
    const monthlyCost = totalCost / termMonths;

    // Update UI
    if (resDepreciation)
      resDepreciation.textContent = formatCurrency(depreciation);
    if (resTax) resTax.textContent = formatCurrency(totalTax);
    if (resTotal) resTotal.textContent = formatCurrency(totalCost);
    if (resMonthly)
      resMonthly.textContent = `${formatCurrency(monthlyCost)} / mo`;
  }

  function formatCurrency(val: number) {
    return new Intl.NumberFormat("en-GB", {
      style: "currency",
      currency: "GBP",
    }).format(val);
  }

  // Attach input listeners
  inputPrice?.addEventListener("input", () => {
    updateResaleEstimate();
    calculate();
  });

  inputTerm?.addEventListener("change", () => {
    updateResaleEstimate();
    calculate();
  });

  inputResale?.addEventListener("input", calculate);

  // Reset button handler
  const btnReset = document.getElementById("btn-reset-prices");
  btnReset?.addEventListener("click", () => {
    if (!currentCar || !inputPrice) return;

    // Reset purchase price to original value from database
    inputPrice.value = currentCar.basicPrice.toString();

    // Recalculate resale estimate with original price
    updateResaleEstimate();
    calculate();
  });

  function updateModifierBadges() {
    if (!modifierBadges || !modifierList || !currentCar) return;

    const modifiers = getActiveModifiers(currentCar);
    const shouldShow = currentModel === "pro" && modifiers.length > 0;

    if (!shouldShow) {
      modifierBadges.classList.remove("max-h-[500px]", "opacity-100", "mt-8");
      modifierBadges.classList.add("max-h-0", "opacity-0", "mt-0");
      return;
    }

    // Clear existing badges
    modifierList.innerHTML = "";

    // Create badges
    modifiers.forEach((mod) => {
      const badge = document.createElement("div");
      badge.className = mod.isPositive
        ? "flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-medium bg-green-50 text-green-700 border border-green-200"
        : "flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-medium bg-amber-50 text-amber-700 border border-amber-200";

      // Icon
      const icon = document.createElement("span");
      icon.textContent = mod.isPositive ? "↑" : "↓";
      badge.appendChild(icon);

      // Label
      const label = document.createElement("span");
      label.textContent = mod.label;
      badge.appendChild(label);

      modifierList.appendChild(badge);
    });

    modifierBadges.classList.remove("max-h-0", "opacity-0", "mt-0");
    modifierBadges.classList.add("max-h-[500px]", "opacity-100", "mt-8");
  }

  // Input Validation Logic
  const numberInputs = [inputPrice, inputResale];

  numberInputs.forEach((input) => {
    if (!input) return;

    // Prevent invalid characters (Strict Allow List)
    input.addEventListener("keydown", (e) => {
      // Allow navigation and control keys
      const allowedKeys = [
        "Backspace",
        "Delete",
        "Tab",
        "Escape",
        "Enter",
        "ArrowLeft",
        "ArrowRight",
        "ArrowUp",
        "ArrowDown",
        "Home",
        "End",
      ];

      // Allow Ctrl/Cmd combinations (Copy, Paste, Select All etc)
      if (allowedKeys.includes(e.key) || e.ctrlKey || e.metaKey) {
        return;
      }

      // Allow digits 0-9 only
      if (!/^\d$/.test(e.key)) {
        e.preventDefault();
      }
    });

    // Clamp values
    input.addEventListener("input", () => {
      if (!input.value) return;

      const val = parseFloat(input.value);
      if (val > 10000000) {
        input.value = "10000000";
        // Trigger calc update if needed
        input.dispatchEvent(new Event("change"));
      }
      if (val < 0) {
        input.value = "0";
      }
    });
  });
</script>
